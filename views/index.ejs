<!DOCTYPE html>
<html>
<body>
  <h1>Products</h1>
  
  <div style="display: flex; flex-wrap: wrap; gap: 5px;">
    <% products.forEach(product => { %>
      <div style="border: 1px solid #ccc; padding: 4px 8px; border-radius: 3px; font-size: 12px;">
        <%= product.id %>: <%= product.name %> ($<%= product.price %>)
      </div>
    <% }) %>
  </div>
</body>
</html>